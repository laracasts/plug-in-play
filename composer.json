{
    "name": "lukeraymonddowning/plug-in-play",
    "description": "Motivational quotes for when testing is hard.",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "plugin"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "pestphp/pest": "^2.0.0",
        "pestphp/pest-plugin": "^2.0.0"
    },
    "autoload": {
        "psr-4": {
            "PluginPlay\\": "src/"
        },
        "files": [
            "src/Autoload.php"
        ]
    },
    "require-dev": {
        "pestphp/pest-dev-tools": "^2.4.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "pest": {
            "plugins": [
                "PluginPlay\\Plugin"
            ]
        }
    }
}
